    <script>
        let chat = null;
        let lastQuestion = '';
        let recognition = null;
        let isRecording = false;

        // === ГЛОБАЛЬНЫЕ ПЕРЕМЕННЫЕ ДЛЯ УПРАВЛЕНИЯ АУДИО ===
        const audioCache = new Map();
        let currentAudio = null;
        let currentButtonElement = null;

        // === ВИРТУАЛЬНАЯ КЛАВИАТУРА С ПРОКРУТКОЙ ===
        class VirtualKeyboard {
            constructor() {
                this.isShift = false;
                this.inputField = document.getElementById('user-input');
                this.keyboard = document.getElementById('virtual-keyboard');
                this.toggle = document.getElementById('keyboard-toggle');
                this.currentLayout = 'letters';
                this.init();
            }

            init() {
                // Переключатель показа клавиатуры
                this.toggle.addEventListener('change', (e) => {
                    if (e.target.checked) {
                        this.show();
                    } else {
                        this.hide();
                    }
                });

                // Обработчики клавиш
                this.keyboard.addEventListener('click', (e) => {
                    const target = e.target.closest('.key-key');
                    if (!target) return;

                    const key = target.dataset.key;
                    this.handleKeyPress(key);
                });

                // Авто-показ на мобильных при фокусе
                this.inputField.addEventListener('focus', () => {
                    if (window.innerWidth <= 768 && !this.toggle.checked) {
                        this.toggle.checked = true;
                        this.show();
                    }
                });

                // Скрытие при клике вне клавиатуры
                document.addEventListener('click', (e) => {
                    const clickedInside =
                        this.keyboard.contains(e.target) ||
                        this.inputField === e.target ||
                        this.inputField.contains(e.target) ||
                        this.toggle === e.target ||
                        this.toggle.parentNode.contains(e.target);

                    if (!clickedInside && this.toggle.checked) {
                        this.toggle.checked = false;
                        this.hide();
                    }
                });

                // Прокрутка к активной раскладке при переключении
                this.keyboard.addEventListener('transitionend', () => {
                    this.scrollToActiveLayout();
                });
            }

            // Прокрутка к активной раскладке
            scrollToActiveLayout() {
                if (this.currentLayout === 'letters') {
                    this.keyboard.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                } else {
                    const symbolsLayout = this.keyboard.querySelector('.symbols-layout');
                    if (symbolsLayout) {
                        symbolsLayout.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            }

            handleKeyPress(key) {
                const input = this.inputField;

                switch (key) {
                    case 'backspace':
                        input.value = input.value.slice(0, -1);
                        break;

                    case 'enter':
                        window.sendQuestion();
                        break;

                    case 'shift':
                        this.toggleShift();
                        break;

                    case 'clear':
                        input.value = '';
                        break;

                    case 'space':
                    case ' ':
                        input.value += ' ';
                        break;

                    case 'symbols':
                        this.currentLayout = 'symbols';
                        this.updateLayout();
                        break;

                    case 'letters':
                        this.currentLayout = 'letters';
                        this.updateLayout();
                        break;

                    default:
                        const char = this.isShift && key.length === 1 && /[a-zа-я]/i.test(key)
                            ? key.toUpperCase()
                            : key;

                        input.value += char;

                        // Выключаем shift после одной буквы
                        if (this.isShift && /^[a-zа-я]$/i.test(key)) {
                            this.toggleShift();
                        }
                }

                input.dispatchEvent(new Event('input'));
                input.focus();
            }

            toggleShift() {
                this.isShift = !this.isShift;
                const shiftKeys = this.keyboard.querySelectorAll('.key-shift');
                const letterKeys = this.keyboard.querySelectorAll('.letters-layout .key-key[data-key]:not(.key-shift):not(.key-symbols)');

                shiftKeys.forEach(el => {
                    el.style.background = this.isShift ? '#007bff' : '#6c757d';
                });

                letterKeys.forEach(el => {
                    const k = el.dataset.key;
                    if (k && k.length === 1 && /[а-я]/i.test(k)) {
                        el.textContent = this.isShift ? k.toUpperCase() : k;
                    }
                });
            }

            updateLayout() {
                const lettersRows = this.keyboard.querySelectorAll('.letters-layout');
                const symbolsRows = this.keyboard.querySelectorAll('.symbols-layout');

                lettersRows.forEach(row => {
                    row.style.display = this.currentLayout === 'letters' ? 'flex' : 'none';
                });
                symbolsRows.forEach(row => {
                    row.style.display = this.currentLayout === 'symbols' ? 'flex' : 'none';
                });

                // Прокручиваем к активной раскладке после переключения
                setTimeout(() => {
                    this.scrollToActiveLayout();
                }, 50);
            }

            show() {
                this.keyboard.style.display = 'block';
                this.updateLayout();
                this.inputField.focus();
                
                // Прокручиваем к активной раскладке после показа
                setTimeout(() => {
                    this.scrollToActiveLayout();
                }, 100);
                
                scrollChatToBottom();
            }

            hide() {
                this.keyboard.style.display = 'none';
            }
        }

        // Функция для автоматической прокрутки чата вниз
        function scrollChatToBottom() {
            if (chat) {
                setTimeout(() => {
                    chat.scrollTop = chat.scrollHeight;
                }, 100);
            }
        }

        // Функция проверки разрешения экрана для Windows Embedded
        function checkScreenSize() {
            const screenWidth = window.screen.width;
            const screenHeight = window.screen.height;
            
            console.log(`Разрешение экрана Windows Embedded: ${screenWidth}x${screenHeight}`);
            
            if (screenWidth <= 1024) {
                document.body.classList.add('compact-mode');
            }
            
            if (screenWidth <= 800) {
                document.body.classList.add('very-compact-mode');
            }
        }

        // Инициализация
        async function init() {
            chat = document.getElementById('chat');
            if (!chat) {
                console.error("❌ Элемент 'chat' не найден!");
                return;
            }

            // Проверяем разрешение экрана для Windows Embedded
            checkScreenSize();

            loadUserPreferences();
            addMessage('assistant', `**${getGreeting()}!**
Рады вас видеть в **стоматологической поликлиники № 22**! 🏥

Я самообучающийся виртуальный помощник на базе искусственного интелекта "Стоматолог" 2.0, готова помочь вам с информацией об услугах и записи на прием. Вы можете писать мне запросы или вводить их голосом, я буду печатать Вам ответ и воспроизводить его голосом. Для удобства, Вы можете использовать готовые ответы нажимая на кнопки расположенные в нижней части виртуального чат бота.`);
            loadMenu();
            initVoiceRecognition();

            // Инициализация виртуальной клавиатуры
            if (document.getElementById('virtual-keyboard')) {
                window.virtualKeyboard = new VirtualKeyboard();
            }
            
            // Автоматическое включение виртуальной клавиатуры на сенсорных устройствах
            if ('ontouchstart' in window || navigator.maxTouchPoints) {
                const toggle = document.getElementById('keyboard-toggle');
                if (toggle) {
                    toggle.checked = true;
                    if (window.virtualKeyboard) {
                        window.virtualKeyboard.show();
                    }
                }
            }

            // Обработчик клавиши Enter
            document.getElementById('user-input').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendQuestion();
                    if (window.virtualKeyboard) {
                        window.virtualKeyboard.hide();
                        document.getElementById('keyboard-toggle').checked = false;
                    }
                }
            });
        }

        // === УЛУЧШЕННЫЙ ГОЛОСОВОЙ ВВОД ===
        function initVoiceRecognition() {
            const voiceInputBtn = document.getElementById('voice-input-btn');
            const recordingIndicator = document.getElementById('recording-indicator');

            if ('SpeechRecognition' in window || 'webkitSpeechRecognition' in window) {
                const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
                recognition = new SpeechRecognition();
                
                recognition.continuous = false;
                recognition.interimResults = false;
                recognition.lang = 'ru-RU';
                recognition.maxAlternatives = 1;

                recognition.onresult = function(event) {
                    const transcript = event.results[0][0].transcript.trim();
                    if (transcript) {
                        document.getElementById('user-input').value = transcript;
                        setTimeout(() => sendQuestion(), 500);
                    }
                    stopVoiceRecording();
                };

                recognition.onerror = function(event) {
                    console.error('Ошибка распознавания:', event.error);
                    stopVoiceRecording();
                    
                    let errorMessage = 'Ошибка распознавания речи';
                    switch(event.error) {
                        case 'no-speech':
                            errorMessage = 'Речь не распознана. Попробуйте снова.';
                            break;
                        case 'audio-capture':
                            errorMessage = 'Микрофон не найден. Проверьте подключение.';
                            break;
                        case 'not-allowed':
                            errorMessage = 'Доступ к микрофону запрещен. Разрешите доступ в настройках браузера.';
                            break;
                    }
                    
                    showVoiceStatus(errorMessage, 'error');
                };

                recognition.onend = function() {
                    if (isRecording) {
                        stopVoiceRecording();
                        showVoiceStatus('Запись завершена', 'info');
                    }
                };

                recognition.onstart = function() {
                    showVoiceStatus('Запись началась... Говорите сейчас', 'recording');
                };

                voiceInputBtn.addEventListener('click', function() {
                    if (isRecording) {
                        stopVoiceRecording();
                    } else {
                        startVoiceRecording();
                    }
                });

                console.log('✅ Голосовой ввод инициализирован');
                
            } else {
                voiceInputBtn.style.display = 'none';
                console.warn('❌ Web Speech API не поддерживается в этом браузере');
            }
        }

        // Функция начала записи
        function startVoiceRecording() {
            if (!recognition) return;
            
            try {
                recognition.start();
                isRecording = true;
                
                document.getElementById('voice-input-btn').innerHTML = '🔴';
                document.getElementById('voice-input-btn').title = 'Остановить запись';
                document.getElementById('recording-indicator').style.display = 'inline';
                document.getElementById('voice-input-btn').classList.add('recording');
                
                document.getElementById('user-input').value = '';
                
            } catch (error) {
                console.error('Ошибка запуска записи:', error);
                showVoiceStatus('Ошибка доступа к микрофону', 'error');
            }
        }

        // Функция остановки записи
        function stopVoiceRecording() {
            if (!recognition) return;
            
            try {
                recognition.stop();
            } catch (error) {
                // Игнорируем ошибки при остановке
            }
            
            isRecording = false;
            
            document.getElementById('voice-input-btn').innerHTML = '🎤';
            document.getElementById('voice-input-btn').title = 'Говорите в микрофон';
            document.getElementById('recording-indicator').style.display = 'none';
            document.getElementById('voice-input-btn').classList.remove('recording');
        }

        // Функция показа статуса голосового ввода
        function showVoiceStatus(message, type = 'info') {
            const statusElement = document.getElementById('voice-status');
            if (!statusElement) return;
            
            statusElement.textContent = message;
            statusElement.className = `voice-status ${type}`;
            
            if (type !== 'error') {
                setTimeout(() => {
                    statusElement.textContent = '';
                    statusElement.className = 'voice-status';
                }, 3000);
            }
        }

        // Загрузка меню
        async function loadMenu() {
            try {
                const endpoints = [
                    '/api/menu',
                    '/menu',
                    '/menu-items',
                    '/static/menu.json'
                ];
                
                let response = null;
                let data = null;
                
                for (const endpoint of endpoints) {
                    try {
                        response = await fetch(endpoint);
                        if (response.ok) {
                            data = await response.json();
                            console.log('✅ Меню загружено с:', endpoint);
                            break;
                        }
                    } catch (err) {
                        console.log(`❌ Ошибка загрузки с ${endpoint}:`, err.message);
                        continue;
                    }
                }
                
                if (!response || !response.ok) {
                    throw new Error('Не удалось загрузить меню ни с одного endpoint');
                }
                
                let menuItems = [];
                if (data.items) {
                    menuItems = data.items;
                } else if (Array.isArray(data)) {
                    menuItems = data;
                } else if (data.menu) {
                    menuItems = data.menu;
                } else {
                    menuItems = data;
                }
                
                renderMenu(menuItems);
                
            } catch (error) {
                console.error('❌ Ошибка загрузки меню:', error);
                showFallbackMenu();
            }
        }

        // Функция для показа тестового меню
        function showFallbackMenu() {
            const fallbackMenu = [
                { display_text: "Запись на приём", question: "Как записаться на прием к стоматологу?" },
                { display_text: "Протезирование", question: "Какие услуги по протезированию зубов предоставляются?" },
                { display_text: "Врачи", question: "Расскажите о врачах вашей поликлиники" },
                { display_text: "Платное отделение", question: "Какие платные услуги предоставляются?" },
                { display_text: "Режим работы", question: "Каков режим работы поликлиники?" },
                { display_text: "Адрес", question: "Где находится поликлиника и как до вас добраться?" }
            ];
            
            renderMenu(fallbackMenu);
        }

        // Отрисовка меню
        function renderMenu(menuItems) {
            const menuContainer = document.getElementById('menuButtons');
            if (!menuItems || menuItems.length === 0) {
                menuContainer.innerHTML = `
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Меню временно недоступно
                    </div>
                `;
                return;
            }
            
            let menuHTML = '';
            menuItems.forEach(item => {
                const safeQuestion = item.question.replace(/'/g, "\\'");
                menuHTML += `<button class="menu-btn" onclick="sendMenuQuestion('${safeQuestion}')">${item.display_text}</button>`;
            });
            
            menuContainer.innerHTML = menuHTML;
        }

        // Отправка вопроса из меню
        function sendMenuQuestion(question) {
            document.getElementById('user-input').value = question;
            sendQuestion();
        }

        // Приветствие
        function getGreeting() {
            const h = new Date().getHours();
            return h < 6 ? "Доброй ночи" : h < 12 ? "Доброе утро" : h < 18 ? "Добрый день" : "Добрый вечер";
        }

        // Добавление сообщения
        function addMessage(role, text, suggestions = []) {
            if (!chat) return;

            const msg = document.createElement('div');
            msg.className = `message ${role}`;
            const renderedText = marked.parse(text);
            const cleanText = stripMarkdown(text);

            if (role === "assistant") {
                msg.innerHTML = `
                    <div class="message-text">${renderedText}</div>
                    <div class="message-actions">
                        <button 
                            class="play-audio-btn" 
                            title="Нажмите, чтобы озвучить ответ. Нажмите ещё раз, чтобы остановить."
                            aria-label="Озвучить ответ"
                            onclick="playAudio('${encodeURIComponent(prepareTextForTTS(cleanText))}')">
                            ▶️ <span class="btn-label">Воспроизвести голосом</span>
                        </button>
                    </div>
                `;
            } else {
                msg.innerHTML = `<div class="message-text">${renderedText}</div>`;
            }

            chat.appendChild(msg);

            if (role === "assistant") {
                const feedback = document.createElement('div');
                feedback.className = "feedback";
                feedback.innerHTML = `Был ли ответ полезен? <button onclick="rate('${lastQuestion}', 'good')">👍</button><button onclick="rate('${lastQuestion}', 'bad')">👎</button>`;
                chat.appendChild(feedback);

                if (suggestions && suggestions.length > 0) {
                    showSuggestions(suggestions);
                }

                const autoSpeakCheckbox = document.getElementById('auto-speak');
                if (autoSpeakCheckbox && autoSpeakCheckbox.checked) {
                    setTimeout(() => playAudio(encodeURIComponent(prepareTextForTTS(cleanText))), 500);
                }
            }

            scrollToMessageStart(msg);
        }

        // Функция для прокрутки к началу сообщения
        function scrollToMessageStart(messageElement) {
            if (!chat || !messageElement) return;
            
            setTimeout(() => {
                const scrollPosition = messageElement.offsetTop - chat.offsetTop;
                
                chat.scrollTo({
                    top: Math.max(0, scrollPosition - 20),
                    behavior: 'smooth'
                });
            }, 50);
        }

        // Показ подсказок
        function showSuggestions(suggestions) {
            const fragment = document.createDocumentFragment();
            
            suggestions.forEach(suggestion => {
                const button = document.createElement("button");
                button.textContent = suggestion.text;
                button.onclick = () => {
                    if (suggestion.answer) {
                        addMessage('assistant', suggestion.answer);
                    } else {
                        document.getElementById("user-input").value = suggestion.question;
                        sendQuestion();
                    }
                };
                fragment.appendChild(button);
            });
            
            const contextDiv = document.createElement("div");
            contextDiv.className = "context-suggestions";
            contextDiv.appendChild(fragment);
            chat.appendChild(contextDiv);
            
            setTimeout(() => {
                scrollToMessageStart(contextDiv);
            }, 100);
        }

        // Отправка вопроса
        function sendQuestion() {
            const input = document.getElementById('user-input');
            const question = input.value.trim();
            
            if (!question) {
                showVoiceStatus('Введите вопрос или используйте голосовой ввод', 'info');
                return;
            }
            
            const sendButton = document.querySelector('.input-area button');
            const originalButtonText = sendButton.innerHTML;
            sendButton.innerHTML = '⏳ Отправка...';
            sendButton.disabled = true;
            
            lastQuestion = question;
            addMessage('user', question);
            input.value = '';
            
            if (window.virtualKeyboard) {
                window.virtualKeyboard.hide();
                document.getElementById('keyboard-toggle').checked = false;
            }
            
            fetch('/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    message: question
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                addMessage('assistant', data.response, data.suggestions || []);
            })
            .catch(err => {
                console.error("Ошибка запроса:", err);
                addMessage('assistant', '🚫 Ошибка подключения. Попробуйте позже.');
            })
            .finally(() => {
                sendButton.innerHTML = originalButtonText;
                sendButton.disabled = false;
            });
        }

        // === ФУНКЦИИ ОЗВУЧКИ ===
        function playAudio(encodedText) {
            const button = event.target.closest('.play-audio-btn');
            const cleanText = decodeURIComponent(encodedText);

            if (currentAudio && !currentAudio.paused && currentButtonElement === button) {
                currentAudio.pause();
                button.innerHTML = '▶️ <span class="btn-label">Продолжить</span>';
                return;
            }

            if (currentAudio && currentAudio.paused && currentButtonElement === button) {
                currentAudio.play().catch(e => console.warn("Ошибка воспроизведения:", e));
                button.innerHTML = '⏸️ <span class="btn-label">Пауза</span>';
                return;
            }

            if (currentAudio && currentButtonElement !== button) {
                currentAudio.pause();
                currentAudio.currentTime = 0;
                if (currentButtonElement) {
                    currentButtonElement.innerHTML = '▶️ <span class="btn-label">Воспроизвести голосом</span>';
                }
            }

            if (audioCache.has(cleanText)) {
                const audio = audioCache.get(cleanText);
                currentAudio = audio;
                currentButtonElement = button;
                button.innerHTML = '⏸️ <span class="btn-label">Пауза</span>';
                audio.play().catch(e => console.warn("Ошибка воспроизведения:", e));
                return;
            }

            const audio = new Audio(`/tts?text=${encodedText}`);
            currentAudio = audio;
            currentButtonElement = button;
            button.disabled = true;
            button.innerHTML = '🔄 <span class="btn-label">Загрузка...</span>';

            audio.addEventListener('loadeddata', () => {
                audioCache.set(cleanText, audio);
                button.disabled = false;
                button.innerHTML = '⏸️ <span class="btn-label">Пауза</span>';
                audio.play().catch(e => console.warn("Ошибка воспроизведения:", e));
            });

            audio.addEventListener('ended', () => {
                button.innerHTML = '▶️ <span class="btn-label">Воспроизвести голосом</span>';
                currentAudio = null;
                currentButtonElement = null;
            });

            audio.addEventListener('pause', () => {
                if (currentButtonElement === button && !audio.ended) {
                    button.innerHTML = '▶️ <span class="btn-label">Продолжить</span>';
                }
            });

            audio.addEventListener('play', () => {
                if (currentButtonElement === button) {
                    button.innerHTML = '⏸️ <span class="btn-label">Пауза</span>';
                }
            });

            audio.addEventListener('error', (e) => {
                console.error("Ошибка аудио:", e);
                button.innerHTML = '❌ <span class="btn-label">Ошибка</span>';
                setTimeout(() => {
                    if (button.innerHTML.includes('❌')) {
                        button.innerHTML = '▶️ <span class="btn-label">Воспроизвести голосом</span>';
                    }
                }, 1500);
                currentAudio = null;
                currentButtonElement = null;
            });

            audio.addEventListener('canplaythrough', () => {
                if (!audioCache.has(cleanText)) {
                    audioCache.set(cleanText, audio);
                }
            });
        }

        function stripMarkdown(text) {
            return text.replace(/\*\*(.*?)\*\*/g, '$1')
                      .replace(/\*(.*?)\*/g, '$1')
                      .replace(/~~(.*?)~~/g, '$1')
                      .replace(/`(.*?)`/g, '$1')
                      .replace(/!\[.*?\]\(.*?\)/g, '')
                      .replace(/\[([^\]]+)\]\([^)]+\)/g, '$1')
                      .replace(/[#>*\-+=[\]{}()|]/g, ' ')
                      .replace(/\s+/g, ' ')
                      .trim();
        }

        function prepareTextForTTS(text) {
            return text
                .replace(/(\d{2})\.(\d{2})\.(\d{4})/g, (match, day, month, year) => {
                    const months = [
                        '', 'января', 'февраля', 'марта', 'апреля', 'мая', 'июня',
                        'июля', 'августа', 'сентября', 'октября', 'ноября', 'декабря'
                    ];
                    const dayNum = parseInt(day);
                    const dayText = convertDayToText(dayNum);
                    const monthNum = parseInt(month);
                    const monthName = monthNum >= 1 && monthNum <= 12 ? months[monthNum] : month;
                    const yearText = convertYearToText(parseInt(year));
                    return `${dayText} ${monthName} ${yearText} года`;
                })
                .replace(/(\d+)\.(\d+)/g, (match, p1, p2) => {
                    if (/\d{2}\.\d{2}\.\d{4}/.test(match)) {
                        return match;
                    }
                    return `${p1} точка ${p2}`;
                })
                .replace(/\*\*/g, '')
                .replace(/_/g, ' ')
                .replace(/#/g, '')
                .replace(/\//g, ' ')
                .split(/\n\s*\n/)
                .join(' <break time="900ms"/> ')
                .replace(/\s+/g, ' ')
                .trim();
        }
        
        function convertDayToText(day) {
            if (day === 1) return 'первое';
            if (day === 2) return 'второе';
            if (day === 3) return 'третье';
            if (day === 4) return 'четвертое';
            if (day === 5) return 'пятое';
            if (day === 6) return 'шестое';
            if (day === 7) return 'седьмое';
            if (day === 8) return 'восьмое';
            if (day === 9) return 'девятое';
            if (day === 10) return 'десятое';
            if (day === 11) return 'одиннадцатое';
            if (day === 12) return 'двенадцатое';
            if (day === 13) return 'тринадцатое';
            if (day === 14) return 'четырнадцатое';
            if (day === 15) return 'пятнадцатое';
            if (day === 16) return 'шестнадцатое';
            if (day === 17) return 'семнадцатое';
            if (day === 18) return 'восемнадцатое';
            if (day === 19) return 'девятнадцатое';
            if (day === 20) return 'двадцатое';
            if (day === 21) return 'двадцать первое';
            if (day === 22) return 'двадцать второе';
            if (day === 23) return 'двадцать третье';
            if (day === 24) return 'двадцать четвертое';
            if (day === 25) return 'двадцать пятое';
            if (day === 26) return 'двадцать шестое';
            if (day === 27) return 'двадцать седьмое';
            if (day === 28) return 'двадцать восьмое';
            if (day === 29) return 'двадцать девятое';
            if (day === 30) return 'тридцатое';
            if (day === 31) return 'тридцать первое';
            return day.toString();
        }

        function convertYearToText(year) {
            if (year < 2000) return year.toString();
            
            const thousands = 'две тысячи';
            const hundreds = year % 1000;
            
            if (hundreds === 0) return thousands;
            
            if (hundreds < 10) {
                const units = ['', 'первого', 'второго', 'третьего', 'четвертого', 'пятого', 'шестого', 'седьмого', 'восьмого', 'девятого'];
                return `${thousands} ${units[hundreds]}`;
            }
            
            if (hundreds < 20) {
                const teens = ['десятого', 'одиннадцатого', 'двенадцатого', 'тринадцатого', 'четырнадцатого', 'пятнадцатого', 'шестнадцатого', 'семнадцатого', 'восемнадцатого', 'девятнадцатого'];
                return `${thousands} ${teens[hundreds - 10]}`;
            }
            
            const tens = Math.floor(hundreds / 10);
            const units = hundreds % 10;
            
            const tensText = [
                '', '', 'двадцатого', 'тридцатого', 'сорокового', 'пятидесятого', 
                'шестидесятого', 'семидесятого', 'восьмидесятого', 'девяностого'
            ][tens];
            
            if (units === 0) return `${thousands} ${tensText}`;
            
            const unitsText = [
                '', 'первого', 'второго', 'третьего', 'четвертого', 'пятого', 
                'шестого', 'седьмого', 'восьмого', 'девятого'
            ][units];
            
            return `${thousands} ${tensText.slice(0, -2)} ${unitsText}`;
        }

        function loadUserPreferences() {
            const autoSpeak = document.getElementById('auto-speak');
            if (autoSpeak) {
                autoSpeak.checked = localStorage.getItem('autoSpeak') === 'true';
                autoSpeak.addEventListener('change', () => {
                    localStorage.setItem('autoSpeak', autoSpeak.checked);
                });
            }
        }

        // Вспомогательные функции
        function clearChat() {
            if (chat) chat.innerHTML = '';
            addMessage('assistant', `Чат очищен. ${getGreeting()}! Чем могу помочь?`);
        }

        function rate(question, feedback) {
            fetch('/feedback', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ question, feedback })
            });
            document.querySelectorAll('.feedback button').forEach(btn => btn.disabled = true);
        }

        // Сделаем функцию отправки сообщения глобально доступной для виртуальной клавиатуры
        window.sendQuestion = sendQuestion;

        // === Инициализация ===
        window.onload = init;
        setInterval(loadMenu, 30000);
        document.addEventListener('visibilitychange', () => !document.hidden && loadMenu());
    </script>
</body>
</html>